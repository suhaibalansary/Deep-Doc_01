  <script>
    let currentSubject = "";

    window.onload = function () {
      setTimeout(() => {
        document.getElementById('splash').style.display = 'none';
      }, 7000);
    };

    function openModal(subject) {
      currentSubject = subject;
      document.getElementById('modalTitle').textContent = `ğŸ“ Ù…Ø³ØªÙ†Ø¯Ø§Øª Ù…Ø§Ø¯Ø© ${subject}`;
      document.getElementById('subjectModal').style.display = 'block';
      loadFiles();
      document.getElementById('pdfViewer').style.display = 'none';
      document.getElementById('fileHint').style.display = 'none';
    }

    function closeModal() {
      document.getElementById('subjectModal').style.display = 'none';
    }

    function saveFiles() {
      const input = document.getElementById('fileInput');
      const files = input.files;
      if (!files.length) return;

      let savedFiles = JSON.parse(localStorage.getItem(currentSubject)) || [];

      for (let file of files) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const fileData = {
            name: file.name,
            type: file.type,
            content: e.target.result
          };
          savedFiles.push(fileData);
          localStorage.setItem(currentSubject, JSON.stringify(savedFiles));
          loadFiles();
        };
        reader.readAsDataURL(file);
      }

      input.value = '';
    }

    function loadFiles() {
      const fileList = document.getElementById('fileList');
      const pdfViewer = document.getElementById('pdfViewer');
      const fileHint = document.getElementById('fileHint');

      fileList.innerHTML = '';
      pdfViewer.style.display = 'none';
      fileHint.style.display = 'none';

      const savedFiles = JSON.parse(localStorage.getItem(currentSubject)) || [];

      if (savedFiles.length === 0) {
        fileList.innerHTML = '<li>Ù„Ø§ ØªÙˆØ¬Ø¯ Ù…Ù„ÙØ§Øª Ø¨Ø¹Ø¯</li>';
        return;
      }

      savedFiles.forEach((fileObj, index) => {
        const li = document.createElement('li');
        li.innerHTML = `${fileObj.name} <button onclick="deleteFile(${index})">âŒ</button>`;
        li.onclick = () => {
          downloadFile(fileObj.name, fileObj.content);
          showHint(fileObj.type);
          if (fileObj.type === 'application/pdf') {
            pdfViewer.src = fileObj.content;
            pdfViewer.style.display = 'block';
          } else {
            pdfViewer.style.display = 'none';
          }
        };
        fileList.appendChild(li);
      });
    }

    function downloadFile(filename, dataURL) {
      const link = document.createElement('a');
      link.href = dataURL;
      link.download = filename;
      link.click();
    }

    function showHint(type) {
      const hint = document.getElementById('fileHint');
      let message = 'ğŸ“‚ ÙŠÙ…ÙƒÙ†Ùƒ ÙØªØ­ Ø§Ù„Ù…Ù„Ù Ø¹Ø¨Ø±: ';

      if (type === 'application/pdf') {
        message += 'Ù…ØªØµÙØ­ Ø§Ù„Ø¥Ù†ØªØ±Ù†Øª Ø£Ùˆ ØªØ·Ø¨ÙŠÙ‚ Ù‚Ø§Ø±Ø¦ PDF Ù…Ø«Ù„ Adobe Acrobat.';
      } else if (type.includes('word') || type === 'application/vnd.openxmlformats-officedocument.wordprocessingml.document') {
        message += 'ØªØ·Ø¨ÙŠÙ‚ Microsoft Word Ø£Ùˆ Google Docs.';
      } else if (type.startsWith('image/')) {
        message += 'Ø¹Ø§Ø±Ø¶ Ø§Ù„ØµÙˆØ± ÙÙŠ Ø§Ù„Ø¬Ù‡Ø§Ø².';
      } else {
        message += 'ØªØ·Ø¨ÙŠÙ‚ Ù…Ù†Ø§Ø³Ø¨ Ø­Ø³Ø¨ Ù†ÙˆØ¹ Ø§Ù„Ù…Ù„Ù.';
      }

      hint.textContent = message;
      hint.style.display = 'block';
    }

    function deleteFile(index) {
      const savedFiles = JSON.parse(localStorage.getItem(currentSubject)) || [];
      savedFiles.splice(index, 1);
      localStorage.setItem(currentSubject, JSON.stringify(savedFiles));
      loadFiles();
    }

    window.onclick = function(event) {
      const modal = document.getElementById('subjectModal');
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
  </script>
